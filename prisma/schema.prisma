generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactionsSent     Transaction[] @relation("Sender")
  transactionsReceived Transaction[] @relation("Receiver")
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  image       String
  price       Int
  createdAt   DateTime @default(now())
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
}

model Transaction {
  id        String   @id @default(uuid())
  amount    Int
  createdAt DateTime @default(now())
  description String?
  fromId    String
  toId      String
  from      User     @relation("Sender", fields: [fromId], references: [id])
  to        User     @relation("Receiver", fields: [toId], references: [id])
}

model DdaglLog {
  id        String   @id @default(uuid())
  userId    String
  change    Int      // positif ou n√©gatif
  reason    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
